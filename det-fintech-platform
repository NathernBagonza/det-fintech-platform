    // Navigation functionalityâ€¨
    function showSection(sectionId) {â€¨
        // Hide all sectionsâ€¨
        document.querySelectorAll('.section').forEach(section = {â€¨
            section.classList.add('hidden');â€¨
        });â€¨
        â€¨
        // Show selected sectionâ€¨
        document.getElementById(sectionId).classList.remove('hidden');â€¨
        â€¨
        // Update navigationâ€¨
        document.querySelectorAll('.nav-btn').forEach(btn = {â€¨
            btn.classList.remove('border-purple-500', 'text-purple-600');â€¨
            btn.classList.add('text-gray-600');â€¨
        });â€¨
        â€¨
        event.target.classList.add('border-purple-500', 'text-purple-600');â€¨
        event.target.classList.remove('text-gray-600');â€¨
        â€¨
        // Load section-specific dataâ€¨
        if (sectionId === 'transactions') {â€¨
            loadTransactions();â€¨
        }â€¨
    }â€¨
â€¨
    // Load transactions into tableâ€¨
    function loadTransactions() {â€¨
        const tbody = document.getElementById('transactionTable');â€¨
        tbody.innerHTML = '';â€¨
        â€¨
        transactions.forEach(txn = {â€¨
            const row = document.createElement('tr');â€¨
            row.className = 'transaction-row';â€¨
            row.innerHTML = `â€¨
                <td class="px-6 py-4 text-sm font-medium text-gray-900"${txn.id}</tdâ€¨
                <td class="px-6 py-4 text-sm text-gray-600"${txn.type}</tdâ€¨
                <td class="px-6 py-4 text-sm text-gray-600"${txn.network}</tdâ€¨
                <td class="px-6 py-4 text-sm text-gray-900"UGX ${txn.amount.toLocaleString()}</tdâ€¨
                <td class="px-6 py-4 text-sm text-green-600"UGX ${txn.commission.toLocaleString()}</tdâ€¨
                <td class="px-6 py-4"â€¨
                    <span class="px-2 py-1 text-xs rounded-full ${txn.status === 'Completed' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}"â€¨
                        ${txn.status}â€¨
                    </spanâ€¨
                </tdâ€¨
                <td class="px-6 py-4 text-sm text-gray-600"${txn.date}</tdâ€¨
            `;â€¨
            tbody.appendChild(row);â€¨
        });â€¨
    }â€¨
