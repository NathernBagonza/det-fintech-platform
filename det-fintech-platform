    // Transaction modal functionalityâ€¨
    function showTransactionModal(type) {â€¨
        const modal = document.getElementById('transactionModal');â€¨
        const title = document.getElementById('modalTitle');â€¨
        const billFields = document.getElementById('billFields');â€¨
        â€¨
        // Set modal title based on transaction typeâ€¨
        const titles = {â€¨
            withdrawal: 'Mobile Money Withdrawal',â€¨
            deposit: 'Deposit Funds',â€¨
            airtime: 'Buy Airtime',â€¨
            electricity: 'Pay Electric Bill',â€¨
            water: 'Pay Water Bill',â€¨
            bank: 'Bank Transfer'â€¨
        };â€¨
        â€¨
        title.textContent = titles[type] || 'New Transaction';â€¨
        â€¨
        // Show/hide bill fields for utility paymentsâ€¨
        if (type === 'electricity' || type === 'water') {â€¨
            billFields.classList.remove('hidden');â€¨
        } else {â€¨
            billFields.classList.add('hidden');â€¨
        }â€¨
        â€¨
        modal.classList.remove('hidden');â€¨
    }â€¨
â€¨
    function closeTransactionModal() {â€¨
        document.getElementById('transactionModal').classList.add('hidden');â€¨
        document.getElementById('transactionForm').reset();â€¨
    }â€¨
â€¨
    function closeSuccessModal() {â€¨
        document.getElementById('successModal').classList.add('hidden');â€¨
    }â€¨
â€¨
    // Form submissionâ€¨
    document.getElementById('transactionForm').addEventListener('submit', function(e) {â€¨
        e.preventDefault();â€¨
        â€¨
        const network = document.getElementById('networkSelect').value;â€¨
        const account = document.getElementById('accountInput').value;â€¨
        const amount = document.getElementById('amountInput').value;â€¨
        â€¨
        if (!account || !amount) {â€¨
            alert('Please fill in all required fields');â€¨
            return;â€¨
        }â€¨
        â€¨
        // Simulate transaction processingâ€¨
        closeTransactionModal();â€¨
        â€¨
        // Show success modalâ€¨
        const successModal = document.getElementById('successModal');â€¨
        const successMessage = document.getElementById('successMessage');â€¨
        successMessage.textContent = `Transaction of UGX ${parseInt(amount).toLocaleString()} processed successfully via ${network.toUpperCase()}.`;â€¨
        successModal.classList.remove('hidden');â€¨
        â€¨
        // Add to transactions listâ€¨
        const newTxn = {â€¨
            id: 'TXN' + String(transactions.length + 1).padStart(3, '0'),â€¨
            type: 'Transaction',â€¨
            network: network.toUpperCase(),â€¨
            amount: parseInt(amount),â€¨
            commission: Math.floor(parseInt(amount) * 0.025),â€¨
            status: 'Completed',â€¨
            date: new Date().toLocaleString()â€¨
        };â€¨
        â€¨
        transactions.unshift(newTxn);â€¨
    });â€¨
