<script 
    // Sample transaction data 
    const transactions = [ 
        { id: 'TXN001', type: 'Withdrawal', network: 'MTN', amount: 50000, commission: 1250, status: 'Completed', date: '2024-01-15 14:30' }, 
        { id: 'TXN002', type: 'Bill Payment', network: 'Airtel', amount: 25000, commission: 200, status: 'Completed', date: '2024-01-15 13:45' }, 
        { id: 'TXN003', type: 'Deposit', network: 'Bank', amount: 100000, commission: 1500, status: 'Pending', date: '2024-01-15 12:20' }, 
        { id: 'TXN004', type: 'Airtime', network: 'MTN', amount: 10000, commission: 100, status: 'Completed', date: '2024-01-15 11:15' }, 
        { id: 'TXN005', type: 'Withdrawal', network: 'Airtel', amount: 75000, commission: 1500, status: 'Completed', date: '2024-01-15 10:30' } 
    ]; 
 
    // Navigation functionality 
    function showSection(sectionId) { 
        // Hide all sections 
        document.querySelectorAll('.section').forEach(section = { 
            section.classList.add('hidden'); 
        }); 
         
        // Show selected section 
        document.getElementById(sectionId).classList.remove('hidden'); 
         
        // Update navigation 
        document.querySelectorAll('.nav-btn').forEach(btn = { 
            btn.classList.remove('border-purple-500', 'text-purple-600'); 
            btn.classList.add('text-gray-600'); 
        }); 
         
        event.target.classList.add('border-purple-500', 'text-purple-600'); 
        event.target.classList.remove('text-gray-600'); 
         
        // Load section-specific data 
        if (sectionId === 'transactions') { 
            loadTransactions(); 
        } 
    } 
 
    // Load transactions into table 
    function loadTransactions() { 
        const tbody = document.getElementById('transactionTable'); 
        tbody.innerHTML = ''; 
         
        transactions.forEach(txn = { 
            const row = document.createElement('tr'); 
            row.className = 'transaction-row'; 
            row.innerHTML = ` 
                <td class="px-6 py-4 text-sm font-medium text-gray-900"${txn.id}</td 
                <td class="px-6 py-4 text-sm text-gray-600"${txn.type}</td 
                <td class="px-6 py-4 text-sm text-gray-600"${txn.network}</td 
                <td class="px-6 py-4 text-sm text-gray-900"UGX ${txn.amount.toLocaleString()}</td 
                <td class="px-6 py-4 text-sm text-green-600"UGX ${txn.commission.toLocaleString()}</td 
                <td class="px-6 py-4" 
                    <span class="px-2 py-1 text-xs rounded-full ${txn.status === 'Completed' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}" 
                        ${txn.status} 
                    </span 
                </td 
                <td class="px-6 py-4 text-sm text-gray-600"${txn.date}</td 
            `; 
            tbody.appendChild(row); 
        }); 
    } 
 
    // Transaction modal functionality 
    function showTransactionModal(type) { 
        const modal = document.getElementById('transactionModal'); 
        const title = document.getElementById('modalTitle'); 
        const billFields = document.getElementById('billFields'); 
         
        // Set modal title based on transaction type 
        const titles = { 
            withdrawal: 'Mobile Money Withdrawal', 
            deposit: 'Deposit Funds', 
            airtime: 'Buy Airtime', 
            electricity: 'Pay Electric Bill', 
            water: 'Pay Water Bill', 
            bank: 'Bank Transfer' 
        }; 
         
        title.textContent = titles[type] || 'New Transaction'; 
         
        // Show/hide bill fields for utility payments 
        if (type === 'electricity' || type === 'water') { 
            billFields.classList.remove('hidden'); 
        } else { 
            billFields.classList.add('hidden'); 
        } 
         
        modal.classList.remove('hidden'); 
    } 
 
    function closeTransactionModal() { 
        document.getElementById('transactionModal').classList.add('hidden'); 
        document.getElementById('transactionForm').reset(); 
    } 
 
    function closeSuccessModal() { 
        document.getElementById('successModal').classList.add('hidden'); 
    } 
 
    // Form submission 
    document.getElementById('transactionForm').addEventListener('submit', function(e) { 
        e.preventDefault(); 
         
        const network = document.getElementById('networkSelect').value; 
        const account = document.getElementById('accountInput').value; 
        const amount = document.getElementById('amountInput').value; 
         
        if (!account || !amount) { 
            alert('Please fill in all required fields'); 
            return; 
        } 
         
        // Simulate transaction processing 
        closeTransactionModal(); 
         
        // Show success modal 
        const successModal = document.getElementById('successModal'); 
        const successMessage = document.getElementById('successMessage'); 
        successMessage.textContent = `Transaction of UGX ${parseInt(amount).toLocaleString()} processed successfully via ${network.toUpperCase()}.`; 
        successModal.classList.remove('hidden'); 
         
        // Add to transactions list 
        const newTxn = { 
            id: 'TXN' + String(transactions.length + 1).padStart(3, '0'), 
            type: 'Transaction', 
            network: network.toUpperCase(), 
            amount: parseInt(amount), 
            commission: Math.floor(parseInt(amount) * 0.025), 
            status: 'Completed', 
            date: new Date().toLocaleString() 
        }; 
         
        transactions.unshift(newTxn); 
    }); 
 
    // Settings functions 
    function saveCommissionSettings(network) { 
        alert(`${network.toUpperCase()} commission settings updated successfully!`); 
    } 
 
    function updateCommissionAccount() { 
        alert('Commission account settings updated successfully!'); 
    } 
 
    function updateWithdrawalCharges() { 
        alert('Withdrawal charges updated successfully!'); 
    } 
 
    function updateTelecomPayments() { 
        alert('Telecom payment rates updated successfully!'); 
    } 
 
    function exportReport(type) { 
        alert(`${type.charAt(0).toUpperCase() + type.slice(1)} report exported successfully!`); 
    } 
 
    // New functions for enhanced features 
    function uploadLogo() { 
        alert('Logo upload functionality would integrate with file picker in actual app'); 
    } 
 
    function toggleBankDropdown() { 
        const dropdown = document.getElementById('bankDropdown'); 
        dropdown.classList.toggle('hidden'); 
    } 
 
    function changeTheme(color) { 
        alert(`Theme changed to ${color}! This would update the entire interface color scheme.`); 
    } 
 
    function saveCustomization() { 
        alert('Customization settings saved successfully!'); 
    } 
 
    function setLayout(layout) { 
        alert(`Layout changed to ${layout} view!`); 
    } 
 
    function updateUSSDCodes() { 
        alert('USSD codes updated successfully! Changes will be active within 24 hours.'); 
    } 
 
    function editUSSDMenu() { 
        alert('USSD menu editor would open here for detailed customization'); 
    } 
 
    function testUSSD() { 
        showUSSDSimulator(); 
    } 
 
    function showUSSDSimulator() { 
        const modal = document.createElement('div'); 
        modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50'; 
        modal.innerHTML = ` 
            <div class="bg-white rounded-xl p-6 max-w-sm w-full mx-4" 
                <h3 class="text-lg font-semibold mb-4"USSD Simulator</h3 
                <div class="ussd-screen mb-4" 
                    <divWelcome to DET</div 
